<!DOCTYPE html>
<html>
  <head>
    <title>云康 Admin</title>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "admin" %>
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'admin' %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= params[:controller][9,99] + '-' + params[:action] %>" >

    <header>
        <%= render 'layouts/admin_header' %>
    </header>

    <div id="wrap">
        <div class="panel panel-default col-sm-3 col-md-3">
          <%= render 'layouts/admin_panel' %>
        </div>
        <div class="main col-sm-9 col-md-9">
          <%= yield %>
        </div>
    </div>

    <footer>
        <div class="block">
            <!-- <p>Copyright &copy;<%# Time.now.year %>Web App.</p> -->
        </div>
    </footer>

  </body>
</html>
