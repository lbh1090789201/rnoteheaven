<section class="order-job">
<ul>
  <% @jobs_by_position.each do |j| %>
  <li>
    <%= j["name"] %>
    <span><%= j["hospital_region"] %></span>
    <%= image_tag "man.png", width: "20", height: "10" %>
    <span><%= j["seekers"].length %>人</span>
    <%= image_tag "list-icon.png", width: "10", height: "10" %>

    <!-- 按职位查看二级页面 -->
    <div class="" style="display: none">
      <a href="javascript:void(0);">待处理</a>
      <a href="javascript:void(0);">按年龄排序</a>
      <!-- 待处理下选框 -->
      <div class="handle-resume" style="display: none">
        <ul>
          <li>待处理</li>
          <li>已处理</li>
        </ul>
      </div>
      <!-- 待处理下选框 -->
      <div class="sort-resume" style="display: none">
        <ul>
          <li>按年龄排序</li>
          <li>按经验排序</li>
          <li>按学历排序</li>
        </ul>
      </div>
      <!-- 按待处理排序 -->
      <ul style="display: none">
        <% j["seekers"].each do |s| %>
          <li>
            <span>1111</span>
            <%= s["show_name"] %>
            <span><%= s["sex"] %></span>
            <span><%= s["age"] %>岁/<%= s["start_work_at"] %>年/<%= s["hightest"] %></span>
            <span><%= s["created_at"] %></span>
            <%= image_tag "list-icon.png", width: "10", height: "10" %>
            <a href="/employer/resumes/<%= s["resume_id"]%>">跳转</a>
          </li>
        <% end %>
      </ul>
      <!-- 按已处理排序 -->
      <ul style="display: none">
        <% j["seekers"].each do |s| %>
          <li>
            <span>2222</span>
            <%= s["show_name"] %>
            <span><%= s["sex"] %></span>
            <span><%= s["age"] %>岁/<%= s["start_work_at"] %>年/<%= s["hightest"] %></span>
            <span><%= s["created_at"] %></span>
            <%= image_tag "list-icon.png", width: "10", height: "10" %>
            <a href="/employer/resumes/<%= s["resume_id"]%>">跳转</a>
          </li>
        <% end %>
      </ul>
      <!-- 按年龄排序 -->
      <ul style="display: none">
        <% j["seekers"].each do |s| %>
          <li>
            <span>3333</span>
            <%= s["show_name"] %>
            <span><%= s["sex"] %></span>
            <span><%= s["age"] %>岁/<%= s["start_work_at"] %>年/<%= s["hightest"] %></span>
            <span><%= s["created_at"] %></span>
            <%= image_tag "list-icon.png", width: "10", height: "10" %>
            <a href="/employer/resumes/<%= s["resume_id"]%>">跳转</a>
          </li>
        <% end %>
      </ul>
      <!-- 按经验排序 -->
      <ul style="display: none">
        <% j["seekers"].each do |s| %>
          <li>
            <span>4444</span>
            <%= s["show_name"] %>
            <span><%= s["sex"] %></span>
            <span><%= s["age"] %>岁/<%= s["start_work_at"] %>年/<%= s["hightest"] %></span>
            <span><%= s["created_at"] %></span>
            <%= image_tag "list-icon.png", width: "10", height: "10" %>
            <a href="/employer/resumes/<%= s["resume_id"]%>">跳转</a>
          </li>
        <% end %>
      </ul>
      <!-- 按学历排序 -->
      <ul style="display: none">
        <% j["seekers"].each do |s| %>
          <li>
            <span>5555</span>
            <%= s["show_name"] %>
            <span><%= s["sex"] %></span>
            <span><%= s["age"] %>岁/<%= s["start_work_at"] %>年/<%= s["hightest"] %></span>
            <span><%= s["created_at"] %></span>
            <%= image_tag "list-icon.png", width: "10", height: "10" %>
            <a href="/employer/resumes/<%= s["resume_id"]%>">跳转</a>
          </li>
        <% end %>
      </ul>

    </div>
  </li>
  <% end %>
</ul>
</section>
