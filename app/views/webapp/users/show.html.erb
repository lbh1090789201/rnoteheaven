<% provide :title, "我的" %>
<div class="main user-first-page home-user">
  <div class="user-info">
    <a href="/webapp/users/<%= current_user.id %>/edit" class="user-hidden">
    <div class="user-info-list">
      <div class="avatar">
        <%# image_tag "avator2.png"  %>
        <%= image_tag @avatar %>
      </div>
      <p class="info-name">严锐</p>
      <p class="info-major">医学护理专业</p>
      <p class="info-major">武汉大学医学院</p>
    </div>
    <div class="user-status">
      <span class="info-major">离职,正在找工作</span>
      <%= image_tag "right2.png"  %>
    </div>
  </a>

  </div>

  <div class="resumes-info-list">
    <div class="mask"></div>
    <div class="content">
      <a class="resumes-list" href="/webapp/resumes/<%= current_user.id %>">
          <%= image_tag "resumes.png",class:"icon1"%>
          <span class="resume">我的简历</span><span>完整度 80%</span>
      </a>
      <a class="resumes-list" href="<%= webapp_apply_records_path %>">
          <%= image_tag "apply_records.png",class:"icon2"%>
          <span class="resume">我的应聘记录</span>
      </a>
      <a class="resumes-list" href="<%= webapp_resume_viewers_path %>">
          <%= image_tag "resume_views.png",class:"icon3"%>
          <span class="resume">谁看过我的简历</span>
      </a>
      <a class="resumes-list" href="/webapp/favorite_jobs">
          <%= image_tag "star_black.png",class:"icon4"%>
          <span class="resume">我收藏的职位</span>
      </a>
      <div class="mask">
      </div>
      <a class="resumes-list" href="<%= webapp_block_hospitals_path %>">
          <%= image_tag "resume_open.png",class:"icon5"%>
          <span class="resume">简历隐私</span>
      </a>
  </div>
</div>
</div>
