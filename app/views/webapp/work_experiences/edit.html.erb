<% provide :title, "编辑工作经历" %>
<% provide :content, "保存" %>

<div class="edit_basic edit-work-experiences">
    <%= simple_form_for @work_experience, :method => :patch, url: webapp_work_experience_path(params[:id]), class: "form-btn-submit" do |f| %>
      <%= f.input :company, label: "医院", input_html: { class: "user-input"} %>
      <%= f.input :position, label: '职位', input_html: { class: "user-input"} %>
      <%= f.input :started_at, label: '入职时间', as: :string, input_html: { class: "user-input"} %>
      <%= f.input :left_time, label: '离职时间', as: :string, input_html: { class: "user-input"} %>
      <%= f.input :job_desc, label: '工作内容', as: :text, input_html: { class: "user-input", placeholder: "最多一千字"} %>
      <%= f.submit id: "submit", class: "btn btn-info btn-right"%>
<% end %>
</div>

<script type="text/javascript">
  fullScreen('.edit_basic');
  clickRignt('#submit');

</script>
