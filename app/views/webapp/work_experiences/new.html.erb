<% provide :title, "添加工作经历" %>
<% provide :content, "保存" %>

<div class="edit_basic edit-work-experiences">
    <%= simple_form_for :work_experience, as: :post, url: webapp_work_experiences_path do |f| %>
    <%= f.input :company, label: "医院", input_html: { class: "user-input"} %>
    <%= f.input :position, label: '职位', input_html: { class: "user-input"} %>
    <%= f.input :started_at, label: '入职时间', input_html: { class: "user-input"} %>
    <%= f.input :left_time, label: '离职时间', input_html: { class: "user-input"} %>
    <%= f.input :job_desc, label: '工作内容', as: :text, input_html: { class: "user-input", placeholder: "最多一千字"} %>

    <%= f.button :submit, '保存',  class: "btn-right" %>
    <% end %>
</div>

<script type="text/javascript">
    fullScreen('.edit_basic');
</script>
