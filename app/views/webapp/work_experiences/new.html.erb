
<% provide :title, "添加工作经历" %>

<% unless User.highest_degree(current_user.id) %>
  <% provide :content, "下一步" %>
  <% provide :link, '/webapp/education_experiences/new' %>
<% end %>

<div class="edit_basic edit-work-experiences">
    <%= simple_form_for :user_info, url: webapp_work_experiences_path, :method => :post do |f| %>
      <%= f.input :name, label: "医院", input_html: { class: "user-input"} %>
      <%= f.input :name, label: '职位', input_html: { class: "user-input"} %>
      <%= f.input :name, label: '入职时间', input_html: { class: "user-input"} %>
      <%= f.input :name, label: '离职时间', input_html: { class: "user-input"} %>
      <%= f.input :name, label: '工作内容', as: :text, input_html: { class: "user-input", placeholder: "最多一千字"} %>


      <%= f.button :button, '继续添加', class: "btn-del" %>
      <%= f.button :submit, '保存',  class: "btn-save" %>
    <% end %>
</div>

<script type="text/javascript">
  fullScreen('.edit_basic');
</script>
