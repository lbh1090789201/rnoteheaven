<% provide :link, new_webapp_work_experience_path  %>
<% provide :title, "工作经历" %>
<% provide :content, "添加" %>
<script>
$(refreshOnce()); //刷新一次页面
</script>
<div class="resume-show work-experience">
  <div class="wrap" id="work_edit_wrap">
    <% if @work_experiences %>
        <% @work_experiences.each do|w| %>
            <section class="workindex-page">
              <div class="box-table">
                <a href="<%= edit_webapp_work_experience_path(w.id) %>" class="edit"><%= image_tag "edit2.png" %></a>
                <time><%= w.started_at.strftime("%Y-%m-%d") if w.started_at %>-<%= w.left_time.strftime("%Y-%m-%d") if w.left_time %></time>
                <div class="work-box">
                  <h3><%= w.company %></h3>
                  <p class="word_edit_page">
                    <%= w.job_desc %>
                  </p>
                </div>
              </div>
            </section>
        <% end %>
    <% end %>

  </div>
</div>

<script type="text/javascript">
    //  job_desc　限制字数
    var section = $(".word_edit_page");
    for(var i=0;i<section.length;i++){
      var text = section[i].innerText;
      if(text.length>=45){
        section[i].innerText = text.substr(0,45)+"....";
      }
    }

　　
    fullScreen('.resume-show');

</script>
