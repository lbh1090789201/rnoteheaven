
<% provide :title, "持有证书" %>

<ul class="certificate-show">
  <% @certificates.each do |f| %>
  <li><span><%= f.title %></span> <%= image_tag "delete.png", onclick: "del(this)", index: f.id %></li>
  <% end %>

  <li><span>添加</span> <a href="/webapp/certificates/new"><%= image_tag "add.png" %></a></li>
</ul>

<script type="text/javascript">
  function del(obj) {
    var c_id = $(obj).attr('index');

    $.ajax({
      url: "/webapp/certificates/" + c_id,
      type: 'DELETE',
      success: function() {
        $(obj).parent().remove();
      },
      error: function() {
        alert('删除失败。')
      }
    });
  }
</script>
