
<% @fair_hospitals.each do |f| %>
<div class="hospital-list fair-list">
  <a href="/webapp/hospitals/<%= f[:hospital].id %>?fair_id=<%= f[:fair_id] %>">
    <div class="hospital-img" style="background: url(<%= asset_path(f[:banner]) %>) no-repeat;background-size: cover;"></div>
    <div class="hospital-bg"></div>
    <div class="hospital-note">
      <h2><%= f[:hospital].name %></h2>
      <p>人投递</p>
      <span><%= f[:apply_length] %></span>
    </div>
  </a>
</div>
<% end %>
