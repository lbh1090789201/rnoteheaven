<% provide :link, webapp_job_fair_path(current_user.id) %>
<% provide :title, "编辑期望工作" %>
<% provide :content, "保存" %>

<div class="edit_basic edit-work-experiences">
    <%= simple_form_for :user_info, url: webapp_search_path(params[:id]) do |f| %>
      <%= f.input :name, label: "职能", input_html: { class: "job-fair", value: "护士", id: "name"} %>
      <%= f.input :name, label: '工作类型', input_html: { class: "job-fair", value: "全职"} %>
      <%= f.input :name, label: '期望城市', input_html: { class: "job-fair", value: "武汉"} %>
      <%= f.input :name, label: '期望薪水', input_html: { class: "job-fair", value: "5K~6K"} %>
      <%= f.input :name, label: '补充说明', as: :text, input_html: { class: "user-input", placeholder: "最多一千字"} %>
    <% end %>
</div>


<script type="text/javascript">
  fullScreen('.edit_basic');
  $('.job-fair').click(function() {
    workExperience();
    $(".before-mask").addClass('mask');
    $('.title').text('选择职能');
    $('.right').text('');
  });
</script>
