                    </a>
                </h3>
                <p>
                  <%= @expect_job.job_type %>
                  <%= @expect_job.job_type.present? ? '/' : '' %>
                  <%= @expect_job.location %>
                  <%= @expect_job.location.present? ? '/' : '' %>
                  <%= @expect_job.expected_salary_range %>
                </p>
                <p class="job-desc-show">
                  <%= @expect_job.job_desc if @expect_job.job_desc %>
                </p>
                 <p class="job-desc-hide" style="display:none;">
                   <%= @expect_job.job_desc if @expect_job.job_desc %>
