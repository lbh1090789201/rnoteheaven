<% provide :title, "我的简历" %>
<% provide :link, "#{current_user.id}/preview" %>
<%= provide :content, "预览" %>
<div class="container resume-show">
    <div class="wrap">

        <section>
            <h2>设置头像</h2>
            <div class="box box-avatar">
                <div class="avatar">
                    <%= image_tag "pencil.png", class: "pencil" %>
                    <div class="avatar-img">
                        <%= image_tag "avator.png"%>
                     </div>
                    <span>点击更换</span>
                </div>
            </div>
        </section>


        <%# @user.each do |u| %>
        <section>
            <h2>基本信息<span>必填</span>
            </h2>
            <div class="box">
                <table>
                    <tr>
                        <td>姓名：</td>
                        <td><%= @user.show_name %></td>
                    </tr>
                    <tr>
                        <td>性别：</td>
                        <td><%= @user.sex %></td>
                    </tr>
                    <tr>
                        <td>最高学历：</td>
                        <td><%= @user.highest_degree %></td>
                    </tr>
                    <tr>
                        <td>工作年限：</td>
                        <td><%= @user.start_work_at %></td>
                    </tr>
                    <tr>
                        <td>出生年限：</td>
                        <td><%= @user.birthday %></td>
                    </tr>
                    <tr>
                        <td>所在城市：</td>
                        <td><%= @user.location %></td>
                    </tr>
                    <tr>
                        <td>联系电话：</td>
                        <td><%= @user.cellphone %></td>
                    </tr>
                    <tr>
                        <td>联系邮箱：</td>
                        <td><%= @user.email %></td>
                    </tr>
                    <tr>
                        <td>当前状态：</td>
                        <td></td>
                    </tr>

                </table>
            </div>
        </section>
        <%# end %>


        <section>
            <h2>工作经历<span>必填</span>
            </h2>
          <% if @work_experiences %>
          <% @work_experiences.each do |w| %>
            <div class="box">
                <a href="<%= webapp_work_experiences_path %>" class="edit">
                    <%= image_tag "pencil3.png" %>编辑
                </a>
                <time><%= w.started_at %>-<%= w.left_time %></time>
                <div class="time-line-box">
                    <h3><%= w.company %><a class="expend">
                            展开<%= image_tag "down2.png" %>
                        </a>
                    </h3>
                    <p>
                      <%= w.job_desc[0, 60] + '……' %>
                    </p>
                     <p>
                       <%= w.job_desc %>
                     </p>
                </div>
            </div>
          <% end %>
          <% end %>
        </section>


        <section>
            <h2>教育经历<span>必填</span>
            </h2>
          <% if @education_experiences %>
          <% @education_experiences.each do |e| %>
            <div class="box">
                <a href="<%= webapp_education_experiences_path %>" class="edit">
                    <%= image_tag "pencil3.png" %>编辑
                </a>
                <time><%= e.graduated_at.strftime("%Y") %>年毕业</time>
                <div class="time-line-box">
                    <h3><%= e.college %><a class="expend" >
                            展开<%= image_tag "down2.png" %></a>
                    </h3>
                </div>
            </div>
          <% end %>
          <% end %>
        </section>



      　<% if @expect_job %>
        <section>
            <h2>期望工作<span>必填</span>
            </h2>
            <div class="box">
                <a href="<%= edit_webapp_expect_job_path(current_user.id) %>" class="edit">
                    <%= image_tag "pencil3.png" %>编辑
                </a>
                <h3><%= @expect_job.name %></h3>
                <p>
                  <%= @expect_job.job_type %>/<%= @expect_job.location %>/<%= @expect_job.expected_salary_range %>
                </p>
            </div>
        </section>
        <% end %>

        <button type="button" name="button" class="refresh">刷新简历</button>
    </div>
</div>

