</div>

<script type="text/javascript">
  //判断描述内容是否过长，长则加省略号
  var desc_p = $('.job-desc-show');
  for(var i=0;i<desc_p.length;i++){
    desc_text = desc_p[i].innerText;
    if(desc_text.length > 60) {
       var p_text = desc_text.substring(0,60) + ".....";
       desc_p[i].innerText = p_text;
    }
  }

  // 通过判断两个P的内容长度是否一样，不一样相互交换内容
  function expend_desc(obj) {
      var p_1 = $(obj).parent().siblings('p.job-desc-show');
      var p_text_1 = p_1.text();
      var p_2 = $(obj).parent().siblings('p.job-desc-hide');
      var p_text_2 = p_2.text();
      if(p_text_1.length != p_text_2.length) {
        p_1.text(p_text_2);
        p_2.text(p_text_1);
      }
  };

