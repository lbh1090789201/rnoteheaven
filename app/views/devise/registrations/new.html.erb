<style>
  .sign_up {
    padding-top: 1rem;
    margin: 0 auto;
    width: 6rem;
  }
  .sign_up .form-group {
    position: relative;
  }
  .sign_up label {
    position: absolute;
    bottom: 0;
    left: 0.1rem;
    margin: 0;
    height: 38px;
    line-height: 38px;
    font-weight: 400;
  }
  .sign_up input {
    text-indent: 0.6rem;
  }
  .sign_up .btn-save {
    border: 1px solid #218868;
    background: #218868;
    text-align: center;
    text-indent: 0;
  }
  .sign_up .btn-save:hover {
    opacity: 0.8;
  }
</style>

<div class="edit_basic no-icon sign_up">

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

        <%= f.input :username, label: '用户名:', input_html: {class: "form-control"} %>
        <%= f.input :show_name, label: '姓　名:', input_html: {class: "form-control"} %>
        <%= f.input :cellphone, label: '电　话:', input_html: {class: "form-control"} %>
        <%= f.input :email, label: '邮　箱:', input_html: {class: "form-control"} %>
        <%= f.input :password, label: '密　码:',as: :password, input_html: {class: "form-control"} %>

        <%= f.button :submit, "注册", class: "btn-save", style: "width: 100%" %>
    <% end %>

</div>
