<% provide :link, "/users/index"  %>
<% provide :title, "用户注册" %>
<div class="edit_basic edit-work-experiences no-icon">

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

        <%= f.input :username, label: '用户名', input_html: {class: "form-control"} %>
        <%= f.input :show_name, label: '姓名', input_html: {class: "form-control"} %>
        <%= f.input :cellphone, label: '电话', input_html: {class: "form-control"} %>
        <%= f.input :email, label: '邮箱', input_html: {class: "form-control"} %>
        <%= f.input :password, label: '密码',as: :password, input_html: {class: "form-control"} %>

        <%= f.button :submit, "注册", class: "btn-save", style: "width: 100%" %>
    <% end %>

</div>

<script type="text/javascript">
    fullScreen('.edit_basic');
</script>
